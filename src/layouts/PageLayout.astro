---
import BaseLayout from './BaseLayout.astro';
import Container from '../components/ui/Container.astro';

export interface Props {
  title: string;
  description?: string;
  showPageHeader?: boolean;
  headerBackground?: 'default' | 'warm' | 'none';
}

const { 
  title, 
  description,
  showPageHeader = true,
  headerBackground = 'warm'
} = Astro.props;

const headerBgClass = {
  default: 'page-header-default',
  warm: 'page-header-warm', 
  none: 'page-header-none'
}[headerBackground];
---

<BaseLayout title={`${title} | Hygge Thoughts`} description={description}>
  {showPageHeader && (
    <header class={`page-header ${headerBgClass}`}>
      <Container>
        <div class="page-header-content">
          <h1 class="page-title">{title}</h1>
          {description && (
            <p class="page-description">{description}</p>
          )}
        </div>
      </Container>
    </header>
  )}

  <div class="page-content">
    <Container>
      <slot />
    </Container>
  </div>
</BaseLayout>

<style>
  .page-header {
    padding: var(--spacing-2xl) 0;
    text-align: center;
  }

  .page-header-default {
    background-color: var(--color-background-alt);
  }

  .page-header-warm {
    background: linear-gradient(135deg, var(--color-background-warm) 0%, #fed7aa 100%);
  }

  .page-header-none {
    background: none;
  }

  .page-header-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-title {
    font-size: var(--font-size-4xl);
    font-weight: bold;
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
  }

  .page-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .page-content {
    padding: var(--spacing-2xl) 0;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: var(--font-size-3xl);
    }
    
    .page-content {
      padding: var(--spacing-xl) 0;
    }
  }
</style>