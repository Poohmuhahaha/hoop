---
import { Image } from "astro:assets";
import Container from "../ui/Container.astro";

interface Props {
  name: string;
  bio: string;
  skills: string[];
  experience: string;
  education: string;
  profileImage: string;
}

const {
  name,
  bio,
  skills = [],
  experience,
  education,
  profileImage,
} = Astro.props;
---

<section class="about" id="about">
  <Container>
    <h2 class="section-title">About Me</h2>

    <div class="about-content">
      <div class="about-text">
        <p class="bio-text">{bio}</p>
        <div class="about-details">
          <div class="detail-item">
            <h3 class="detail-label">Work Experience</h3>
            <p class="detail-value">{experience}</p>
          </div>

          <div class="detail-item">
            <h3 class="detail-label">Education</h3>
            <p class="detail-value">{education}</p>
          </div>
        </div>

        <div class="skills-section">
          <h3 class="skills-title">Tool Skills</h3>

          <div class="skills-grid">
            {skills.map((skill) => <p class="skill-tag">{skill}</p>)}
          </div>
        </div>
      </div>

      <div class="about-image">
        <div class="image-container">
          <Image
            src={profileImage}
            alt={`About ${name}`}
            class="about-img"
            width="500"
            height="700"
              loading="lazy"
  decoding="async"
  fetchpriority="auto"
          />
        </div>
      </div>
    </div>
    <div class="about-actions">
      <a href="/resume.pdf" class="btn-primary" download>Download CV</a>
    </div>
  </Container>
</section>

<style>
  .about {
    background-color: var(--color-primary);
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-between);
  }

  .section-title {
    font-size: var(--font-title);
    font-weight: bold;
    color: var(--color-primary-dark);
    padding-top: 40px;
    padding-bottom: 40px;
  }

  .bio-text {
    font-size: var(--font-description);
    color: var(--color-primary-dark);
    padding-bottom: 20px;
  }

  .detail-value {
    color: var(--color-primary);
    font-size: var(--font-description);
  }

  .about-details {
    display: flex;
    gap: var(--spacing-xs);
    flex-direction: column;
  }

  .detail-item {
    padding: var(--spacing-button);
    background-color: var(--color-primary-dark);
    border-radius: var(--border-radius-md);
    align-items: center;
    font-size: var(--font-description);
    color: var(--color-primary);
    justify-content: center;
  }

  .skills-title {
    color: var(--color-primary-dark);
    font-size: var(--font-title);
    padding-top: 40px;
    padding-bottom: 20px;
  }

  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    padding-bottom: 40px;
  }

  .skill-tag {
    border-radius: var(--border-radius-md);
    font-size: var(--font-description);
    line-height: 1;
    text-decoration: none;
    height: 68px;
    width: 178px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-primary-dark);
    color: var(--color-primary);
  }

  .about-image {
    display: flex;
    justify-content: center;
    border-radius: var(--border-radius-md);
  }

  .image-container {
    width: 600px;
    height: 700px;
  }

  .about-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: var(--border-radius-md);
  }

  .about-actions {
    padding-bottom: var(--spacing-between);
    width: 100%;
  }

  .btn-primary {
    width: 100%;
  }

  @media (max-width: 1024px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    .section-title {
      font-size: 24px;
      padding-top: 24px;
      padding-bottom: 24px;
    }
    .skills-title {
      font-size: 18px;
      padding-top: 12px;
      padding-bottom: 8px;
    }
    .skills-grid {
      gap: 8px;
      padding-bottom: 12px;
    }
    .image-container {
      width: 300px;
      height: 400px;
    }
  }
  @media (max-width: 768px) {
    .about-content {
      gap: 12px;
    }
    .section-title {
      font-size: 16px;
      padding-top: 8px;
      padding-bottom: 8px;
    }
    .skills-title {
      font-size: 14px;
      padding-top: 4px;
      padding-bottom: 4px;
    }
    .skills-grid {
      gap: 4px;
      padding-bottom: 4px;
    }
    .image-container {
      width: 120px;
      height: 160px;
    }
    .bio-text, .detail-value, .detail-item, .skill-tag {
      font-size: 10px;
    }
  }
  @media (max-width: 375px) {
    .about-content {
      gap: 4px;
    }
    .section-title {
      font-size: 12px;
      padding-top: 2px;
      padding-bottom: 2px;
    }
    .skills-title {
      font-size: 10px;
      padding-top: 2px;
      padding-bottom: 2px;
    }
    .image-container {
      width: 64px;
      height: 80px;
    }
    .bio-text, .detail-value, .detail-item, .skill-tag {
      font-size: 8px;
    }
  }
</style>
