---
import "../../styles/global.css";
import { Image } from "astro:assets";
import Container from "../ui/Container.astro";

export interface Props {
  name: string;
  title: string;
  profileImage: string;
}

const { name, title, profileImage } = Astro.props;
---

<section class="hero bg-[var(--color-primary)] py-[var(--spacing-3xl)] pb-[var(--spacing-between)]">
  <Container>
    <h2 class="hero-heading text-[var(--color-primary-dark)] font-bold pt-[40px] pb-[40px] text-[var(--font-title)] text-green-600">
      Available for hire!
    </h2>
    <div class="hero-all-content grid grid-cols-2 gap-[var(--spacing-between)] h-[431px]">
      <div class="hero-image flex justify-center">
        <Image
          src={profileImage}
          alt={name}
          class="profile-img w-full h-full rounded-[var(--border-radius-md)] object-cover"
          width="100"
          height="100"
        />
      </div>
      <div class="hero-text-and-buttons flex flex-col justify-between">
        <h1 class="hero-title text-[var(--color-primary-dark)] text-[var(--font-title)] leading-none pt-[var(--spacing-xs)] pb-5">
          Hi, I'm <span class="name">{name}</span><br />
          {title}
        </h1>
        <div class="hero-actions flex gap-[var(--spacing-sm)] pt-[var(--spacing-md)]">
          <a href="#portfolio" class="btn-primary">View My Work</a>
          <a href="#contact" class="btn-primary">Get In Touch</a>
        </div>
      </div>
    </div>
  </Container>
</section>
