---
import OptimizedImage from "../ui/OptimizedImage.astro";
import { Image } from "astro:assets";
const { heroImage, title, description } = Astro.props;
---

{
  heroImage && (
    <div class="hero-image-container">
      <OptimizedImage
        class="hero-image"
        src={heroImage}
        width={1280}
        height={643}
        alt={title}
        loading="eager"
      />
      {description && <div class="image-description">{description}</div>}
    </div>
  )
}

<style>
  .hero-image-container {
    position: relative;
    display: inline-block;
    width: 100%;
    max-width: 1280px;
  }
  .hero-image {
    height: 643px;
    border-radius: var(--border-radius-md);
  }
  .image-description {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    background: var(--color-primary-dark);
    color: var(--color-primary);
    padding: var(--spacing-sm);
    font-size: 24px;
    border-radius: 0 0 var(--border-radius-md) var(--border-radius-md);
  }
</style>
