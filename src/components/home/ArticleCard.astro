---
import Card from "../ui/Card.astro";
import Button from "../ui/Button.astro";
import { Image } from "astro:assets";

export interface Props {
  title: string;
  excerpt: string;
  image: string;
  href: string;
}

const { title, excerpt, image, href } = Astro.props;
---

<Card class="article-card">
  <div class="article-image">
    <Image
      src={image}
      alt={title}
      class="article-img"
      width="400"
      height="200"
        loading="lazy"
  decoding="async"
  fetchpriority="auto"
    />
  </div>

  <div class="article-content">
    <div class="content">
      <h3 class="article-title">{title}</h3>
      <p class="article-excerpt">{excerpt}</p>
    </div>
    <div class="article-cta">
      <Button href={href} variant="primary" size="sm"> Read more </Button>
    </div>
  </div>
</Card>

<style>
  .content {
    padding-bottom: var(--spacing-between);
  }

  .article-card {
    display: flex;
    flex-direction: column;
  }

  .article-img {
    background-color: var(--color-primary);
    border-radius: var(--border-radius-md);
    width: 400px;
    height: 225px;
    max-width: 400px;
    max-height: 225px;
  }
  

  .article-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-color: var(--color-primary);
    
  }

  .article-title {
    font-size: var(--font-description);
    font-weight: bold;
    color: var(--color-primary-dark);
    padding-bottom: 20px;
  }

  .article-excerpt {
    height: 80px;
    color: var(--color-primary-dark);
    font-size: 16px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }

  @media (max-width: 1024px) {
    .article-img {
      width: 300px;
      height: 170px;
      max-width: 300px;
      max-height: 170px;
    }
    .article-title {
      font-size: 18px;
    }
    .article-excerpt {
      font-size: 14px;
      height: 60px;
    }
  }
  @media (max-width: 768px) {
    .article-img {
      width: 100%;
      height: 120px;
      max-width: 100%;
      max-height: 120px;
    }
    .article-title {
      font-size: 16px;
    }
    .article-excerpt {
      font-size: 12px;
      height: 48px;
    }
  }
  @media (max-width: 375px) {
    .article-img {
      height: 80px;
      max-height: 80px;
    }
    .article-title {
      font-size: 14px;
      padding-bottom: 8px;
    }
    .article-excerpt {
      font-size: 10px;
      height: 32px;
      -webkit-line-clamp: 2;
    }
  }

</style>
