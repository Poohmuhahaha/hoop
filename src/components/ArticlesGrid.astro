    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-between);
  }

  .view-more-card {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #A59C8B;
    border-radius: var(--border-radius-md);
