---
import Container from '../ui/Container.astro';

export interface Props {
  email?: string;
  phone?: string;
  location?: string;
  socialLinks?: Array<{
    platform: string;
    url: string;
    icon: string;
  }>;
}

const { 
  email = "john@example.com",
  phone = "+1 (555) 123-4567",
  location = "San Francisco, CA",
  socialLinks = []
} = Astro.props;

const defaultSocialLinks = [
  { platform: "LinkedIn", url: "https://linkedin.com/in/johndoe", icon: "linkedin" },
  { platform: "GitHub", url: "https://github.com/johndoe", icon: "github" },
  { platform: "Twitter", url: "https://twitter.com/johndoe", icon: "twitter" },
  { platform: "Instagram", url: "https://instagram.com/johndoe", icon: "instagram" }
];

const links = socialLinks.length > 0 ? socialLinks : defaultSocialLinks;
---

<section class="contact section" id="contact">
  <Container>
    <h2 class="section-title">Let's Work Together</h2>
    <div class="contact-content">

      <!-- ตรงนี้จะเป็นจุที่ต้องการให้แสดงผล Info ทั้งหมดของผมเอง เย่ ๆ --> 
      <div class="contact-info">
        <p class="section-description">Have a project in mind? I'd love to hear about it. Send me a message and let's discuss how I can help bring your ideas to life.</p>
        
        <!-- ตรงนี้จะเกี่ยวกับ Information เกี่ยวกับตัว Contact ว่าสามารถติดต่อทางไหนได้บ้าง -->
        <div class="contact-details">
          <div class="contact-item">
          
            <!-- ตรงนี้จะเป็น Icon ของ Email -->
            <div class="contact-icon">
              <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>

            <!-- ตรงนี้จะเป็น Info ของ Email -->
            <div class="contact-text">
              <h4>Email</h4>
              <a href={`mailto:${email}`} class="contact-link">{email}</a>
            </div>
          </div>
          
          <!-- ตรงนี้จะเป็น Icon ของ Phone -->
          <div class="contact-item">
            <div class="contact-icon">
              <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>

            <!-- ตรงนี้จะเป็น Info ของ Phone -->
            </div>
            <div class="contact-text">
              <h4>Phone</h4>
              <a href={`tel:${phone.replace(/[^\d+]/g, '')}`} class="contact-link">{phone}</a>
            </div>
          </div>
          
          <!-- ตรงนี้จะเป็น Icon ของ Location -->
          <div class="contact-item">
            <div class="contact-icon">
              <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>

            <!-- ตรงนี้จะเป็น Info ของ Location -->
            </div>
            <div class="contact-text">
              <h4>Location</h4>
              <p>{location}</p>
            </div>
          </div>
        </div>
        <!-- แล้วก็จบบบ ในส่วนของ Contact ที่ชาวบ้านสามารถติดต่อผมได้ -->
        
        <!-- ตั้งแต่จุนี้จะเป็นในส่วนของ Icon my social media -->
        <div class="social-links">
          <h4 class="social-title">Follow Me</h4>

          <!-- ตรงนี้จะเป็น Grid ของ Social Media -->
          <div class="social-grid">

            <!-- การ map ตรงนี้ก้คือการเรียกข้อมูลาใช้จาก JS ด้านบน -->
            {links.map((link) => (
              <a href={link.url} target="_blank" rel="noopener noreferrer" class="social-link">
                
                <!-- เริ่มจาก LinkedIn backlink to my account -->
                {link.icon === 'linkedin' && (
                  <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}

                <!-- เริ่มจาก GitHub backlink to my account -->
                {link.icon === 'github' && (
                  <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                  </svg>
                )}

                <!-- เริ่มจาก X backlink to my account -->
                {link.icon === 'twitter' && (
                  <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                )}

                <!-- เริ่มจาก Instagram backlink to my account -->
                {link.icon === 'instagram' && (
                  <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
        <!--จนถึงจรงนี้-->

      </div>
      
      <!-- ส่วนของ การกรอกฟอร์ม ตั้งแต่จุดนี้ -->
      <!-- ที่จำเป็นต้องมี div ตรงจุดนี้เพราะว่า ต้องการให้ Name and Last name อยู่จุดเดียวกัน -->
      <div class="contact-form-section">
        <form class="contact-form">
          <div class="form-row">
            
            <div class="form-group">
              <label for="firstName" class="form-label">First Name</label>
              <input type="text" id="firstName" name="firstName" class="form-input" required />
            </div>
            
            <div class="form-group">
              <label for="lastName" class="form-label">Last Name</label>
              <input type="text" id="lastName" name="lastName" class="form-input" required />
            </div>
          </div>
          
          <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-input" required />
          </div>
          
          <div class="form-group">
            <label for="subject" class="form-label">Subject</label>
            <input type="text" id="subject" name="subject" class="form-input" required />
          </div>

          <div class="form-group">
            <label for="message" class="form-label">Message</label>
            <textarea id="message" name="message" rows="6" class="form-input" required></textarea>
          </div>
          
          <button type="submit" class="btn btn-primary btn-full">Send Message</button>
        </form>        
      </div>
      <!-- จนถึงจุดนี้ -->


    </div>
  </Container>
</section>

<style>
  .contact {
    background-color: var(--color-primary);
    padding-bottom: var(--spacing-between);
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-between);
  }

  .section-header {
    font-size: var(--font-description);
  }

  .section-title {
    font-size: var(--font-title);
    font-weight: bold;
    color: var(--color-primary-dark);
    padding-top: 40px;
    padding-bottom: 40px;
  }

  .section-description {
    font-size: var(--font-description);
    color: var(--color-primary-dark);
    padding-bottom: var(--spacing-between);
  }

  .contact-details {
    padding-bottom: var(--spacing-sm);
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
    
  }

  .contact-icon {
    width: 60px;
    height: 60px;
    color: var(--color-primary-dark);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-text h4 {
    font-size: var(--font-description);
    font-weight: bold;
    color: var(--color-primary-dark);
  }

  .contact-text p {
    color: var(--color-primary-dark);
  }

  .contact-link {
    color: var(--color-primary-dark);
    text-decoration: none;
  }

  .social-title {
    font-size: var(--font-description);
    font-weight: bold;
    color: var(--color-primary-dark);
    padding-bottom: var(--spacing-xs);
  }

  .social-grid {
    display: flex;
    gap: var(--spacing-xs);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background-color: var(--color-background-gray);
    color: var(--color-text-muted);
    text-decoration: none;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-between);
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-label {
    font-size: var(--font-description);
    font-weight: bold;
    color: var(--color-primary-dark);
    margin-bottom: var(--spacing-xs);
  }

  .form-input {
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: var(--spacing-xs);
    padding-right: var(--spacing-xs);
    border-radius: var(--border-radius-md);
    font-size: var(--font-description);
    color: var(--color-primary);
    background-color: var(--color-background);
  }

  .btn-full {
    width: 100%;
    justify-content: center;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

</style>
