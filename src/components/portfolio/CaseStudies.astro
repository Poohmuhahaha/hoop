---
import { Image } from "astro:assets";
import Container from "../ui/Container.astro";
import Button from "../ui/Button.astro";

export interface Props {
  projects: Array<{
    id: string;
    title: string;
    description: string;
    image: string;
    technologies: string[];
    liveUrl: string;
    githubUrl: string;
    featured: boolean;
  }>;
}

const { projects = [] } = Astro.props;

const defaultProjects = [
  {
    id: "ecommerce-platform",
    title: "E-commerce Platform",
    description:
      "A modern e-commerce platform built with React and Node.js featuring real-time inventory management and seamless payment integration.",
    image: "/project-1.jpg",
    technologies: ["React", "Node.js", "MongoDB", "Stripe"],
    liveUrl: "https://example.com",
    githubUrl: "https://github.com/example",
    featured: true,
  },
  {
    id: "mobile-app",
    title: "Mobile Banking App",
    description:
      "Secure and intuitive mobile banking application with biometric authentication and real-time transaction tracking.",
    image: "/project-2.jpg",
    technologies: ["React Native", "Firebase", "TypeScript"],
    liveUrl: "https://example.com",
    featured: true,
  },
  {
    id: "dashboard",
    title: "Analytics Dashboard",
    description:
      "Comprehensive analytics dashboard for business intelligence with interactive charts and real-time data visualization.",
    image: "/project-3.jpg",
    technologies: ["Vue.js", "D3.js", "Python", "PostgreSQL"],
    liveUrl: "https://example.com",
    githubUrl: "https://github.com/example",
    featured: true,
  },
    {
    id: "dashboard",
    title: "Analytics Dashboard",
    description:
      "Comprehensive analytics dashboard for business intelligence with interactive charts and real-time data visualization.",
    image: "/project-3.jpg",
    technologies: ["Vue.js", "D3.js", "Python", "PostgreSQL"],
    liveUrl: "https://example.com",
    githubUrl: "https://github.com/example",
    featured: true,
  },
];


const projectList = projects.length > 0 ? projects : defaultProjects;
---

<section class="case-studies" id="portfolio">
  <Container>
    <div class="case-study-header">
      <h2 class="case-study-heading">Case Studies</h2>

    <!--เป็นจุดที่เอาไว้ Add Grid ทั้งหมดลงไปใน Case stufies section ผ่าน JS โดย CMS -->
    <div class="projects-grid" id="projects-grid"> 
      
      
      <!-- เริ่มทำการ Loop Content -->
      {
        projectList.map((project, index) => (

          <!--จุดนี้เอาไว้แสดงผล เวลา Hover -->
          <div class={`project-card ${project.featured ? "featured" : ""} ${index === 0 ? "large" : ""} ${index > 3 ? "hidden-project" : ""}`}
            data-index={index}
          >


            <!--จุดนี้เป็นจุดที่เอาไวว้ใส่รูปไอคอนเวลา Hover ตั้งแต่จุดนี้*/-->
            <div class="project-image">
              <Image src={project.image} alt={project.title} width="30" height="30"/> 


              <div class="project-overlay">
                <div class="project-links">


                  {project.liveUrl && (
                    <a href={project.liveUrl} class="project-link" target="_blank" rel="noopener noreferrer">
                      <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/> 
                      </svg>
                    </a>
                  )}


                  {project.githubUrl && (
                    <a href={project.githubUrl} class="project-link" target="_blank" rel="noopener noreferrer">
                      <svg width="20"height="20" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
                      </svg>
                    </a>
                  )}

          
                </div>
              </div>
            </div>
            <!--ถึงจุดนี้-->


            <!-- จุดนี้เป็นจุดที่เอาไว้ใส่ Content ผ่าน JavaScript เวลาต้องการเปลี่ยนแปลงอะไรเร็ว ๆ ก็จะสามารถแก้ผ่านรับบ CMS ได้ เหมือยจุดอื่น ๆ -->
            <div class="project-content">
              <h3 class="project-title">{project.title}</h3>


              <!-- เป็นจุดี่เอาไว้ใส่ Tag ผ่าน JS  -->
              <div class="project-technologies">
                {project.technologies.map((tech) => (
                  <span class="tech-tag">{tech}</span>
                ))}
              </div>


              <!-- จนถึงจุดนี้ -->
              <p class="project-description">{project.description}</p>
              <!-- จนถึงจุดนีั้ -->

            </div>
          </div>
        ))
      }
    </div>

    <div class="view-all">
      <div>
        <button class="btn-primary" id="view-all-btn" type="button">View All Projects</button>
      </div>
    </div>
  </Container>
</section>

<script is:inline>
  const btn = document.getElementById('view-all-btn');
  if (btn) {
    btn.addEventListener('click', function() {
      document.querySelectorAll('.hidden-project').forEach(el => {
        el.classList.remove('hidden-project');
      });
      btn.style.display = 'none';
    });
  }
</script>

<style>

  .case-study-heading {
    font-size: var(--font-title);
    font-weight: bold;
    color: var(--color-primary-dark);
    padding-top: 40px;
    padding-bottom: 40px;
  }

  .case-studies {
    background-color: var(--color-primary);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: var(--spacing-between);
  }

  .project-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 16/10;
    border-radius: var(--border-radius-md);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    background: var(--color-primary-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .project-links {
    display: flex;
    gap: var(--spacing-md);
  }

  .project-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background-color: var(--color-primary);
    color: var(--color-text);
    border-radius: 50%;
    text-decoration: none;
  }

  .project-link:hover {
    background-color: var(--color-primary-dark);
    color: var(--color-primary);
  }

  .project-title {
    font-size: var(--font-description);
    color: var(--color-primary-dark);
    padding-bottom: var(--spacing-xs);
  }

  .project-description {
    color: var(--color-primary-dark);
    padding-bottom: var(--spacing-sm);
    font-size: var(--font-description);
  }

  .project-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    padding-bottom: var(--spacing-between);
  }

  .tech-tag {
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: var(--spacing-xs);
    padding-right: var(--spacing-xs);
    background-color: var(--color-primary-dark);
    color: var(--color-primary);
    border-radius: var(--border-radius-md);
    font-size: 12px;
  }

  .view-all {
    text-align: start;
    padding-top: var(--spacing-between);
    padding-bottom: var(--spacing-between);
  }

  .btn-primary {
    width: 100%;
  }

  .hidden-project {
    display: none !important;
  }
</style>
